{
  "name": "cloudflare-template",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "remix vite:dev",
    "dev:wrangler": "npm run build && wrangler dev",
    "build": "remix vite:build",
    "start": "wrangler dev",
    "typecheck": "tsc",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "deploy": "npm run build && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply cloudflare-template-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply cloudflare-template-db --remote",
    "db:studio": "drizzle-kit studio",
    "seed": "npx tsx scripts/seed.ts",
    "setup": "npm run db:migrate && npm run seed && npm run dev"
  },
  "dependencies": {
    "@remix-run/cloudflare": "^2.15.0",
    "@remix-run/react": "^2.15.0",
    "drizzle-orm": "^0.38.0",
    "isbot": "^5.1.17",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@remix-run/dev": "^2.15.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.15.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.3",
    "wrangler": "^3.91.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
